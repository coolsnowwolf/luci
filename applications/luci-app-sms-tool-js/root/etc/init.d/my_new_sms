USE_PROCD=1
START=95
STOP=01


start_service() {
    procd_open_instance
    procd_set_param command /bin/sh "/sbin/sms_led.sh"
    procd_close_instance
}


service_triggers()
{
        procd_add_reload_trigger "sms_tool_js"
}


stop_service() {
	for KILLPID in `ps | grep 'my_new_sms' | awk ' { print $1;}'`; do 
  	(kill -9 $KILLPID >/dev/null 2>&1 )&
	done
	sleep 1
	return 0
}


restart_service() {
    stop_service
    start_service
}
